<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        tools:layout="@layout/splash_screen"
        android:name="uz.musofirlar.musofirlaruz.screens.SplashScreen"
        android:label="SplashScreen" >
        <action
            android:id="@+id/action_splashScreen_to_viewPagerHome"
            app:destination="@id/viewPagerHome"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_mainScreen"
            app:destination="@id/loginScreen"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/viewPagerHome"
        android:name="uz.musofirlar.musofirlaruz.screens.ViewPagerHome"
        tools:layout="@layout/view_pager_home"
        android:label="ViewPagerHome" >
        <action
            android:id="@+id/action_viewPagerHome_to_mainScreen"
            app:destination="@id/loginScreen"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="uz.musofirlar.musofirlaruz.screens.LoginScreen"
        tools:layout="@layout/login_screen"
        android:label="LoginScreen" >
        <action
            android:id="@+id/action_loginScreen_to_registerScreen"
            app:destination="@id/registerScreen" />
    </fragment>
    <fragment
        android:id="@+id/registerScreen"
        android:name="uz.musofirlar.musofirlaruz.screens.RegisterScreen"
        tools:layout="@layout/registr_screen"
        android:label="RegisterScreen" >
        <action
            android:id="@+id/action_registerScreen_to_homeScreen2"
            app:destination="@id/homeScreen2"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeScreen2"
        tools:layout="@layout/home_screen"
        android:name="uz.musofirlar.musofirlaruz.screens.HomeScreen"
        android:label="HomeScreen" />

</navigation>