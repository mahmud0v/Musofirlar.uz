<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/rent_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19sp"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/rent_home"
        android:textColor="#000000"
        android:textSize="18.05sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_id"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14.4dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search_view_bg"
        android:paddingEnd="10dp"
        app:closeIcon="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rent_home_text"
        app:searchIcon="@drawable/ic_search_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/filter_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_view_id"
        app:layout_constraintRight_toRightOf="@id/search_view_id"
        app:layout_constraintTop_toTopOf="@id/search_view_id" />

    <TextView
        android:id="@+id/com_offers_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/comfort_offers"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view_id" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com_offers_id"
        tools:listitem="@layout/rv1_item_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Sizga yaqinlari"
        android:textSize="13sp"
        android:id="@+id/near_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv1_id"
        android:textColor="#000000"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/near_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/rv2_id"
        tools:listitem="@layout/rv2_item_list"
        />





</androidx.constraintlayout.widget.ConstraintLayout>