<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/unsplash_2"
            android:layout_width="124dp"
            android:layout_height="103dp"
            android:src="@drawable/unsplash_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_regular"
            android:text="2 Xonali / 80m2 | 2 kishilik"
            android:textColor="#000000"
            app:layout_constraintLeft_toRightOf="@id/unsplash_2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="London, Downtown st. 77"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/rv_2_txt1"
            app:layout_constraintTop_toBottomOf="@id/rv_2_txt1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.000 so'\m"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/unsplash_2"
            app:layout_constraintLeft_toLeftOf="@id/location_txt"
            app:layout_constraintTop_toBottomOf="@id/location_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>