<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F9F9F9"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rent_home"
        android:textSize="18.05sp"
        android:id="@+id/rent_home_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="19sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="#000000"
        />
    
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        app:searchIcon="@drawable/ic_search_icon"
        android:layout_height="41dp"
        android:layout_marginTop="14.4dp"
        android:layout_marginRight="20dp"
        android:id="@+id/search_view_id"
        android:background="@drawable/search_view_bg"
        app:layout_constraintTop_toBottomOf="@id/rent_home_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_view_id"
        app:layout_constraintBottom_toBottomOf="@id/search_view_id"
        app:layout_constraintRight_toRightOf="@id/search_view_id"
        android:src="@drawable/filter_icon"
        android:padding="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>